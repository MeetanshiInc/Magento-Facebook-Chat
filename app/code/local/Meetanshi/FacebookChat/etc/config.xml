<?xml version="1.0"?>
<config>
    <modules>
        <Meetanshi_FacebookChat>
            <version>1.0.0</version>
        </Meetanshi_FacebookChat>
    </modules>
    <frontend>
        <layout>
            <updates>
                <facebookchat>
                    <file>facebookchat.xml</file>
                </facebookchat>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <facebookchat>
                <class>Meetanshi_FacebookChat_Block</class>
            </facebookchat>
        </blocks>
        <helpers>
            <facebookchat>
                <class>Meetanshi_FacebookChat_Helper</class>
            </facebookchat>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <facebookchat after="Mage_Adminhtml">Meetanshi_FacebookChat_Adminhtml</facebookchat>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <facebookchat>
                                            <title>Facebook Chat</title>
                                        </facebookchat>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <facebookchat module="facebookchat">
                            <title>Facebook Chat</title>
                            <sort_order>100</sort_order>
                            <children>
                            </children>
                        </facebookchat>
                    </children>
                </admin>
            </resources>
        </acl>
            <layout>
                <updates>
                    <facebookchat>
                        <file>picker.xml</file>
                    </facebookchat>
                </updates>
            </layout>
    </adminhtml>
</config> 